<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="2">

    <!-- First Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image for the First Card -->
            <ImageView
                android:id="@+id/imageViewLeft"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/package1"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/titleTextViewLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mirissa"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionTextViewLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="430$"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Second Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image for the Second Card -->
            <ImageView
                android:id="@+id/imageViewRight"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/package2"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/titleTextViewRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sigiriya"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionTextViewRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="900$"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
